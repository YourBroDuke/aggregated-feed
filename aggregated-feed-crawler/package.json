{
  "name": "aggregated-feed-crawler",
  "version": "1.0.0",
  "description": "Standalone crawler and sync service for aggregated-feed.",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "NODE_OPTIONS='--loader ts-node/esm' ts-node src/index.ts",
    "build": "tsc && cp -r src/crawlers/xiaohongshu/scripts dist/crawlers/xiaohongshu/",
    "start": "node dist/index.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch"
  },
  "dependencies": {
    "@fastify/cors": "^11.0.1",
    "axios": "^1.9.0",
    "dotenv": "^16.4.5",
    "fastify": "^5.3.3",
    "fastify-plugin": "^5.0.1",
    "jsdom": "^26.1.0",
    "mongoose": "^8.15.1",
    "node-cron": "^4.1.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.30",
    "jest": "^30.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  }
}